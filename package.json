{
  "name": "@qing-dev/monorepo",
  "version": "0.1.0",
  "description": "清廉街数据桥接模块，用于从学校网站上获取并转换数据",
  "private": "true",
  "scripts": {
    "prepare": "husky install",
    "format": "prettier --loglevel warn --write \"**/*.{ts,tsx,css,md}\"",
    "posttest": "npm run format",
    "prepublish": "npm run format && pnpm run test --filter bridge",
    "publish": "pnpm publish --access public --filter bridge"
  },
  "devDependencies": {
    "c8": "^7.11.3",
    "concurrently": "^7.2.2",
    "happy-dom": "^6.0.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "serve": "^13.0.4",
    "tsup": "^6.1.3",
    "typescript": "^4.7.4",
    "vite": "^2.9.14",
    "vitest": "^0.18.0"
  },
  "lint-staged": {
    "*.{ts,js,css,md}": "prettier --write"
  }
}
